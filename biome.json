{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["./dist", ".vscode/settings.json"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["./dist", ".vscode/settings.json"],
		"indentStyle": "tab",
		"lineEnding": "lf",
		"lineWidth": 100
	}
}
