{
  "name": "openpay-react-integration",
  "version": "1.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/*.js", "dist/*.d.ts"],
  "scripts": {
    "build": "bun build --target=node ./index.ts --outdir=dist && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.json",
    "lint": "bunx @biomejs/biome lint ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "postbuild": "rimraf tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/bun": "latest",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.5",
    "@biomejs/biome": "^1.8.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "author": "Your Name",
  "license": "MIT"
}
